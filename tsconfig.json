{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": false,
    "removeComments": false,
    "outDir": "./app",
    "esModuleInterop": true,
    "types": ["reflect-metadata", "node"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2017", "dom"],
    "declaration": false,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": [ "node_modules", "app" ]
}